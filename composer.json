{
    "name": "gazu1986/laravel-ai-validator",
    "description": "Validate, retry, and type-cast structured AI output against Laravel validation rules or JSON schemas.",
    "keywords": [
        "laravel",
        "ai",
        "validation",
        "structured-output",
        "openai",
        "anthropic",
        "json-schema",
        "retry",
        "llm"
    ],
    "homepage": "https://github.com/gazu1986/laravel-ai-validator",
    "license": "MIT",
    "authors": [
        {
            "name": "gazu1986",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^12.0",
        "illuminate/support": "^12.0",
        "illuminate/validation": "^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "gazu1986\\AiValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "gazu1986\\AiValidator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "gazu1986\\AiValidator\\Providers\\AiValidatorServiceProvider"
            ],
            "aliases": {
                "AiValidator": "gazu1986\\AiValidator\\Facades\\AiValidator"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}